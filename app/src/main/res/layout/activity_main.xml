<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.capx.viewmodel.StockViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black">
            <ImageView
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:paddingVertical="5dp"
                android:src="@drawable/capx">
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:background="@color/black">
            <EditText
                android:id="@+id/searchtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginLeft="20dp"
                android:textSize="6pt"
                android:background="@drawable/search_styling"
                android:hint="Enter Stock Symbol"
                android:fontFamily="@font/inter_bold"
                android:padding="15dp"
                android:textColor="#E0E0E0"
                android:textColorHint="#40E0E0E0">
            </EditText>
            <ImageView
                android:id="@+id/searchButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/search"
                android:background="@drawable/search_styling"
                android:paddingVertical="13dp">
            </ImageView>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/WelcomeMSG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            android:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:text="@string/Welcome"
                android:fontFamily="@font/inter_bold"
                android:textSize="8pt"
                android:textColor="#E0E0E0"
                android:padding="30dp">

            </TextView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/BottmBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/black"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Research to investing, all-in-one place"
                android:textColor="@color/white"
                android:textSize="7pt"
                android:layout_marginBottom="5dp">

            </TextView>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/stockCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#1E1E1E"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/WelcomeMSG"
            android:visibility="gone"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:id="@+id/stockSymbol"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="10pt"
                    android:text="CDSL"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:textColor="@color/white"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/stockPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/stockPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="10pt"
                    android:text="2387.25"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:paddingHorizontal="8dp"
                    android:paddingTop="8dp"
                    app:layout_constraintStart_toEndOf="@+id/stockSymbol"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/stockName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textSize="8pt"
                    android:text="Central Depository of india and england o this is whatevver"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:paddingHorizontal="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    app:layout_constraintEnd_toStartOf="@+id/change"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/stockSymbol"
                    app:layout_constraintWidth_percent="0.5" />

                <TextView
                    android:id="@+id/stockChangePercentage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:textSize="8pt"
                    android:text="19.2"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintStart_toEndOf="@+id/stockName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/stockPrice"
                    app:layout_constraintWidth_percent="0.5" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
